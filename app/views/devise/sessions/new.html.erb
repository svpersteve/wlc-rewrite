<div class="a-page-holder">
  <section class="a-section">
    <div class="a-content a-content-narrow u-center">
      <h1>Sign in</h1>
      <% if devise_mapping.registerable? %>
        <p>
          Not yet joined? <%= link_to "Register", new_registration_path(resource_name) %>.
        </p>
      <% end %>
    </div>
  </section>
  <section class="a-section">
    <div class="a-content a-content-narrow u-center a-section--separated a-section--separated-top">
      <%= link_to member_meetup_omniauth_authorize_path, class: 'a-button a-button--elastic' do %>
        <i class="fa fa-meetup"></i>
        Sign in with Meetup
      <% end %>
    </div>
  </section>
  <section class="a-section">
    <div class="a-content a-content-narrow">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="m-sign-in">
          <p class="u-left">Email</p>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          <p class="u-left">Password</p>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          <%= flash[:recaptcha_error] %>
          <div class="u-center u-margin-top--small u-margin-bottom--small">
            <%= recaptcha_tags %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="m-sign-in__remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "Log in", class: 'a-button' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
