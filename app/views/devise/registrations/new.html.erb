<div class="a-page-holder">
  <section class="a-section">
    <div class="a-content a-content-narrow u-center">
      <h1>Register</h1>
      <% if devise_mapping.registerable? %>
        <p>
          Already joined? <%= link_to "Sign in", new_session_path(resource_name) %>.
        </p>
      <% end %>
    </div>
  </section>
  <section class="a-section">
    <div class="a-content a-content-narrow u-center a-section--separated a-section--separated-top">
      <%= link_to member_meetup_omniauth_authorize_path, class: 'a-button a-button--elastic' do %>
        <i class="fa fa-meetup"></i>
        Register with Meetup
      <% end %>
    </div>
  </section>
  <section class="a-section">
    <div class="a-content a-content-narrow u-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="m-sign-in">
          <%= devise_error_messages! %>
          <p class="u-left">Name</p>
          <%= f.text_field :name, placeholder: "Name", required: true %>
          <p class="u-left">Username</p>
          <%= f.text_field :username, placeholder: "Username", required: true %>
          <p class="u-left">Email</p>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          <p class="u-left">Password</p>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
          <%= f.submit "Sign up", class: 'a-button' %>
          <%= flash[:recaptcha_error] %>
          <div class="u-center u-margin-top--small u-margin-bottom--small">
            <%= recaptcha_tags %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
